<?xml version='1.0' encoding='utf-8'?>
<plugin id="blueshift-cordova-plugin" version="0.0.1"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Blueshift</name>
    <js-module name="Blueshift" src="www/Blueshift.js">
        <clobbers target="cordova.plugins.Blueshift" />
    </js-module>
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="Blueshift">
                <param name="ios-package" value="Blueshift" />
            </feature>
        </config-file>
        <source-file src="src/ios/Blueshift.m" />
        <podspec>
          <config>
            <source url="https://github.com/CocoaPods/Specs.git"/>
          </config>
          <pods use-frameworks="true">
            <pod name="BlueShift-iOS-Extension-SDK" spec="~> 2.1.14"/>
            <pod name="BlueShift-iOS-SDK" spec="~> 2.1.14" />
          </pods>
        </podspec>
    </platform>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="Blueshift">
                <param name="android-package" value="blueshift-cordova-plugin.Blueshift" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/Blueshift.java" target-dir="src/blueshift-cordova-plugin/Blueshift" />
    </platform>
</plugin>
